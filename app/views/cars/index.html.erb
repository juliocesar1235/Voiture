<h1>Lista de Autos</h1>

<%= link_to 'Nuevo Post', new_car_path %>
<table>
  <tr>
    <th>Marca</th>
    <th>Modelo</th>
    <th></th>
  </tr>

  <% @cars.each do |car| %>
    <tr>
      <td><%= car.brand %></td>
      <td><%= car.car_model %></td>
      <td><%= link_to 'Show', car_path(car) %></td>
      <td><%= link_to 'Edit', edit_car_path(car) %></td>
      <td><%= link_to 'Destroy', car_path(car),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
<%= link_to 'Atras', root_path %>
